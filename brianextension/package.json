{
  "name": "brianextension",
  "displayName": "brianExtension",
  "publisher": "brian-team",
  "description": "brianExtension",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/brian-team/brian-code-editor"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Data Science", "Machine Learning", "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./client/out/extension",
  "contributes": {

    "languages": [
      {
        "id": "brian",
        "extensions": [
          ".brian"
        ],
        "aliases": [
          "Brian"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "brian",
        "scopeName": "source.brian",
        "path": "./brianLang/syntax/brian.tmLanguage.json"
      },
      {
        "injectTo": ["source.python"],
        "scopeName": "brian.injection",
        "path": "./brianLang/syntax/brian.injection.json"
      }
    ],
    "hoverProvider": true

  },


  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w"
  },
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@types/vscode": "^1.62.0",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.2.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0"
  }
}
