{
  "name": "brianextension",
  "displayName": "brianExtension",
  "publisher": "brian-team",
  "description": "brianExtension",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/brian-team/brian-code-editor"
  },
  "version": "0.0.5",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Data Science",
    "Machine Learning",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:brian"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration":{
      "title": "Brian",
      "properties": {
        "Brian.python.interpreterpath": {
          "type": "string",
          "default": "python3",
          "description": "Python interpreter path used to run the Brian language server."
        }
      }
    },
    "languages": [
      {
        "id": "brian",
        "extensions": [
          ".brian"
        ],
        "aliases": [
          "Brian"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "brian",
        "scopeName": "source.brian",
        "path": "./brianLang/syntax/brian.tmLanguage.json"
      },
      {
        "injectTo": [
          "source.python"
        ],
        "scopeName": "brian.injection",
        "path": "./brianLang/syntax/brian.injection.json"
      }
    ],
    "hoverProvider": true,
    "completionItemProvider": {
      "resolveProvider": true
    },
    "completionProvider": {
      "triggerCharacters": [
        "."
      ],
      "resolveProvider": true
    },
    "definitionProvider": true
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w"
  },
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@types/vscode": "^1.62.0",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.2.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "node-typescript": "^0.1.3",
    "vscode-languageclient": "^7.0.0"
  }
}
